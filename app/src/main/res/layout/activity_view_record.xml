<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ViewRecordActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/viewreco_record_img"
        android:layout_width="230dp"
        android:layout_height="230dp" />
    <TextView
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/blackCommon"
        android:id="@+id/viewreco_record_writeTime"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:textColor="@color/blackCommon"
        android:id="@+id/viewreco_record_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/blackCommon"
        android:id="@+id/viewreco_record_hashtag"
        android:layout_width="230dp"
        android:layout_height="wrap_content" />


</LinearLayout>