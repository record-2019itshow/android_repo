<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:textColor="@color/blackCommon"
        android:textSize="30sp"
        android:text="Sign Up"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        style="@style/EditTheme"
        android:id="@+id/signUp_nameEdit"
        android:hint="이름"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/EditTheme"
        android:id="@+id/signUp_idEdit"
        android:hint="아이디"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        style="@style/EditTheme"
        android:id="@+id/signUp_pwEdit"
        android:hint="비밀번호"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        style="@style/EditTheme"
        android:id="@+id/signUp_pwConfirm_Edit"
        android:hint="비밀번호 확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/signUp_btn"
        android:text="회원가입"
        android:background="@drawable/basic_buttons"
        android:textColor="@drawable/basic_button_textcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>